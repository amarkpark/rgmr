<h1 class="text-center neontitle">Find Movie Reviews listed here:</h1>
<br />
{{#each model as |movie|}}
  <div class="col-xs-10 col-xs-offset-1 neon-box">
    <h2>{{movie.title}}</h2>
    <br />
    <div class="col-xs-5 col-xs-offset-1">
      <h3><span class="glyphicon glyphicon-film"></span> Release Year: {{movie.release_year}}</h3>
    </div>
    <div class="col-xs-5 col-xs-offset-1">
      <h3><span class="glyphicon glyphicon-film"></span> Rating: 
      {{movie.rating}} <span class="glyphicon glyphicon-star"></span>
      </h3>
    </div>
    <br />
    <br />
    <blockquote>{{movie.review}}</blockquote>
  </div>
  <br />
{{/each}}

